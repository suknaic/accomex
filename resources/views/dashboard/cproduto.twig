{% extends 'templates/app.twig' %}

{% block content %}


	<link rel="stylesheet" href="{{base_url()}}/css/produtopreview.css">

	<div class="module">
		<div class="module-head">
			<h3>Cadastro de Produto</h3>
		</div>
		<div class="module-body">
			{% include 'templates/partials/flash.twig' %}
			<br/>

			<form class="form-horizontal row-fluid">
				<div class="head">
					<h3>Informações:</h3>
				</div>

				<div class="control-group">
					<h4>Foto Produtos:</h4>
					<div class="controls" style="max-width: 600px;">
						<input id="input-id" type="file" class="file" data-preview-file-type="text" multiple>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="basicinput">EMPRESA</label>
					<div class="controls">
						<select tabindex="1" data-placeholder="Select here.." class="span8">
							<option value="">Selecione uma Empresa..</option>
							<option value="Category 1">Alimentos</option>
							<option value="Category 2">Atacadista e varejista</option>
							<option value="Category 3">Third Row</option>
							<option value="Category 4">Fourth Row</option>
						</select>
					</div>
				</div>
				<!--fim preview-->
				<div class="control-group">
					<label class="control-label" for="inputname">Nome do Produto:</label>
					<div class="controls">
						<input type="text" id="name" placeholder="Nome do Produto.." class="span8">

					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="inputname">Nome Comercial:</label>
					<div class="controls">
						<input type="text" id="name" placeholder="Nome comercial.." class="span8">

					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="basicinput">NCM:</label>
					<div class="controls">
						<div class="input-prepend">
							<input class="span8" type="text" placeholder="">
						</div>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="basicinput">Marca:</label>
					<div class="controls">
						<div class="input-prepend">
							<input class="span8" type="text" placeholder="">
						</div>
					</div>
				</div>


				<div class="control-group">
					<label class="control-label" for="basicinput">Descrição:</label>
					<div class="controls">
						<textarea class="span8" rows="5"></textarea>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="basicinput">Especificação:</label>
					<div class="controls">
						<textarea class="span8" rows="5"></textarea>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="basicinput">Certificações:</label>
					<div class="controls">
						<textarea class="span8" rows="5"></textarea>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="basicinput">Setor:</label>
					<div class="controls">
						<select tabindex="1" data-placeholder="Select here.." class="span8">
							<option value="">Selecione uma Empresa..</option>
							<option value="Category 1">Alimentos</option>
							<option value="Category 2">Atacadista e varejista</option>
							<option value="Category 3">Third Row</option>
							<option value="Category 4">Fourth Row</option>
						</select>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="basicinput">Segmento</label>
					<div class="controls">
						<select tabindex="1" data-placeholder="Select here.." class="span8">
							<option value="">Selecione uma Empresa..</option>
							<option value="Category 1">Alimentos</option>
							<option value="Category 2">Atacadista e varejista</option>
							<option value="Category 3">Third Row</option>
							<option value="Category 4">Fourth Row</option>
						</select>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">Possuí Catálogo:</label>
					<div class="controls">
						<label class="radio inline">
							<input type="radio" name="optionsRadios" id="optionsRadios1" value="nao" checked="">
							NÃO
						</label>
						<label class="radio inline">
							<input type="radio" name="optionsRadios" id="optionsRadios2" value="sim">
							SIM
						</label>

					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="basicinput">Paises habilitados:</label>
					<div class="controls">
						<textarea class="span8" rows="5"></textarea>
					</div>
				</div>


				<div class="control-group ">
					<button type="submit" class="btn btn-primary btn-large">Cadastrar Produto</button>
				</div>
			</form>
		</div>
	</div>

	<script src="{{base_url()}}/js/produtopreview.js"></script>
{% endblock %}
